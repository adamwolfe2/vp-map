{
  "project": {
    "name": "VendingPreneur Map",
    "description": "Internal CRM mapping tool for Modern Amenities Group to visualize 20,000+ Vendingpreneur clients across the United States",
    "type": "internal_tool",
    "tech_stack": {
      "framework": "Next.js 14 (App Router)",
      "language": "TypeScript (strict mode)",
      "ui_library": "shadcn/ui + Radix UI",
      "styling": "Tailwind CSS",
      "mapping": "Mapbox GL JS",
      "icons": "Lucide React",
      "deployment": "Vercel"
    },
    "timeline": {
      "estimated_hours": "10-13 hours",
      "phases": [
        {
          "name": "Setup & Configuration",
          "duration": "1-2 hours"
        },
        {
          "name": "Map Component",
          "duration": "2-3 hours"
        },
        {
          "name": "Search & Filters",
          "duration": "2 hours"
        },
        {
          "name": "Client Sidebar",
          "duration": "2-3 hours"
        },
        {
          "name": "Stats Dashboard",
          "duration": "1 hour"
        },
        {
          "name": "Main Page Assembly",
          "duration": "1 hour"
        },
        {
          "name": "Testing & Deploy",
          "duration": "1 hour"
        }
      ]
    }
  },
  "data_source": {
    "platform": "Airtable",
    "access": "read_only",
    "tables": {
      "clients": {
        "name": "Clients",
        "record_count": 20647,
        "required_fields": [
          "Full Name",
          "Client ID*",
          "Membership Level",
          "Status",
          "City",
          "State/Province",
          "Latitude",
          "Longitude",
          "Total Number of Machines",
          "Total Number of Locations",
          "Total Monthly Revenue",
          "Personal Email",
          "Phone Number",
          "Business Name",
          "Location 1-5 Address"
        ]
      },
      "locations": {
        "name": "Locations",
        "record_count": 67,
        "required_fields": [
          "Location Name",
          "Property Type",
          "Machine Type",
          "Number of Machines",
          "Monthly Revenue"
        ]
      }
    }
  },
  "environment_variables": {
    "required": [
      {
        "name": "AIRTABLE_PERSONAL_ACCESS_TOKEN",
        "description": "Read-only Airtable personal access token",
        "source": "Adam Wolfe",
        "is_secret": true
      },
      {
        "name": "AIRTABLE_BASE_ID",
        "description": "Airtable base ID (starts with 'app')",
        "source": "Adam Wolfe",
        "is_secret": false
      },
      {
        "name": "AIRTABLE_CLIENTS_TABLE_NAME",
        "description": "Name of clients table",
        "value": "Clients",
        "is_secret": false
      },
      {
        "name": "AIRTABLE_LOCATIONS_TABLE_NAME",
        "description": "Name of locations table",
        "value": "Locations",
        "is_secret": false
      },
      {
        "name": "NEXT_PUBLIC_MAPBOX_TOKEN",
        "description": "Mapbox public access token",
        "value": "pk.eyJ1IjoiYWRhbXdvbGZlIiwiYSI6ImNtbDFmYTYzNTA3ZXUzZG9mY2R0eWh5OGoifQ.M6oK5RfEWBqLgUJ6-bOSbg",
        "is_secret": false
      }
    ]
  },
  "design_system": {
    "colors": {
      "primary": "#00B67A",
      "background": "#FFFFFF",
      "text_primary": "#0A0A0A",
      "text_secondary": "#525252",
      "border": "#E5E5E5",
      "hover": "#FAFAFA",
      "membership": {
        "gold": "#FFD700",
        "silver": "#C0C0C0",
        "bronze": "#CD7F32",
        "expired": "#999999"
      }
    },
    "typography": {
      "font_family": "Inter",
      "sizes": {
        "h1": "32px",
        "h2": "24px",
        "h3": "18px",
        "body": "14px",
        "small": "12px"
      }
    },
    "spacing": {
      "container": "max-w-screen-2xl",
      "padding": "16px",
      "gap": "16px",
      "border_radius": "8px"
    }
  },
  "features": {
    "core": [
      {
        "name": "Interactive Map",
        "description": "Display all clients on US map with color-coded markers",
        "components": ["MapView", "ClientMarker"],
        "priority": "critical"
      },
      {
        "name": "Search & Filter",
        "description": "Full-text search and multi-criteria filtering",
        "components": ["SearchBar", "FilterPanel"],
        "priority": "critical"
      },
      {
        "name": "Client Details Sidebar",
        "description": "Slide-in panel with complete client information",
        "components": ["ClientSidebar", "ContactCard", "MetricsGrid", "LocationsList"],
        "priority": "critical"
      },
      {
        "name": "Stats Dashboard",
        "description": "Real-time aggregate metrics",
        "components": ["StatsBar"],
        "priority": "high"
      }
    ],
    "optional": [
      {
        "name": "Marker Clustering",
        "description": "Group markers in dense areas",
        "priority": "nice_to_have"
      },
      {
        "name": "Mobile Responsive",
        "description": "Optimize for mobile devices",
        "priority": "nice_to_have"
      }
    ]
  },
  "file_structure": {
